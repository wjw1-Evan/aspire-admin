{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.AspNetCore.HealthChecks": "Warning",
      "System.Net.Http.HttpClient": "Warning",
      "System.Net.Http.HttpClient.IoTGatewayStatusChecker": "Warning",
      "System.Net.Http.HttpClient.SimpleHttpDataCollector": "Warning",
      "Polly": "Warning",
      "MongoDB": "Warning",
      "Platform.ApiService": "Information",
      "Platform.ApiService.Controllers": "Information",
      "Platform.ApiService.Services": "Information",
      "Platform.ApiService.Middleware": "Information",
      "Platform.ApiService.Services.IoTDataCollector": "Warning",
      "Platform.ApiService.Services.IoTGatewayStatusChecker": "Warning",
      "Platform.ApiService.Services.IoTGatewayStatusCheckHostedService": "Warning",
      "Platform.ApiService.Services.IoTDataCollectionHostedService": "Warning",
      "Platform.ApiService.Services.HttpIoTDataFetchClient": "Warning",
      "Platform.ApiService.Services.SimpleHttpDataCollector": "Warning"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] ",
      "LogLevel": {
        "Default": "Information",
        "Platform.ApiService": "Information"
      }
    }
  },
  "ActivityLog": {
    "Enabled": true,
    "IncludeAnonymous": true
  },
  "IoTDataCollection": {
    "Enabled": true,
    "Cron": "0 */1 * * * *",
    "PageSize": 50,
    "MaxDegreeOfParallelism": 2,
    "TimeoutSeconds": 60,
    "HttpFetch": {
      "Enabled": false,
      "Method": "Get",
      "UrlTemplate": "",
      "RequestTimeoutSeconds": 20,
      "RetryCount": 1,
      "RetryDelayMs": 300
    },
    "GatewayStatusCheckEnabled": true,
    "GatewayPingTimeoutSeconds": 5
  },
  "Jwt": {
    "ExpirationMinutes": "10080",
    "RefreshTokenExpirationDays": "30",
    "RefreshTokenSecret": ""
  }
}