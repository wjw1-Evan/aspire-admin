{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
 
  "AllowedOrigins": [
    "http://localhost:15001",
    "http://localhost:15002"
  ],
  "ActivityLog": {
    "Enabled": true,
    "ExcludedPaths": [
      "/health",
      "/api/openapi",
      "/scalar/",
      "/metrics"
    ],
    "IncludeQueryString": true,
    "IncludeAnonymous": false,
    "MaxQueryStringLength": 500
  },
  "Geocoding": {
    "GeoNamesUsername": "demo"
  },
  "Jwt": {
    "ExpirationMinutes": "10080",
    "RefreshTokenExpirationDays": "30",
    "RefreshTokenSecret": ""
  },
  "IoTDataCollection": {
    "Enabled": true,
    "Cron": "0 */5 * * * *",
    "PageSize": 100,
    "MaxDegreeOfParallelism": 4,
    "TimeoutSeconds": 120,
    "GenerateMockData": false,
    "MockMinValue": 0,
    "MockMaxValue": 100
  }
}
