{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient": "Warning",
      "Polly": "Warning",
      "MongoDB": "Warning",
      "Platform.ApiService": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:15001",
    "http://localhost:15002"
  ],
  "IoTDataCollection": {
    "Enabled": true,
    "Cron": "0 */5 * * * *",
    "PageSize": 100,
    "MaxDegreeOfParallelism": 4,
    "TimeoutSeconds": 120,
    "HttpFetch": {
      "Enabled": false,
      "Method": "Get",
      "UrlTemplate": "",
      "RequestTimeoutSeconds": 30,
      "RetryCount": 1,
      "RetryDelayMs": 500
    },
    "GatewayStatusCheckEnabled": true,
    "GatewayPingTimeoutSeconds": 5
  },
  "ActivityLog": {
    "Enabled": true,
    "ExcludedPaths": [
      "/health",
      "/api/openapi",
      "/scalar/",
      "/metrics"
    ],
    "IncludeQueryString": true,
    "IncludeAnonymous": false,
    "MaxQueryStringLength": 500
  },
  "Jwt": {
    "ExpirationMinutes": "30",
    "RefreshTokenExpirationDays": "7"
  },
  "McpScoring": {
    "MinimumMatchScore": 3.0,
    "ExactNameMatchBonus": 10.0,
    "ExactKeywordMatchBonus": 8.0,
    "LongKeywordMatchBonus": 5.0,
    "ShortKeywordMatchBonus": 2.0,
    "KeywordLengthThreshold": 2,
    "MultiMatchBonusMultiplier": 2.0,
    "DomainContextBonus": 2.0,
    "MaxMatchedTools": 3,
    "HistoryMessageScanLimit": 5,
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "DomainKeywords": {
      "park": [
        "园区",
        "招商",
        "租户",
        "资产",
        "楼铺"
      ],
      "iot": [
        "物联网",
        "设备",
        "传感器",
        "网关"
      ],
      "file": [
        "文件",
        "网盘",
        "共享",
        "分享",
        "版本"
      ],
      "task": [
        "任务",
        "待办",
        "项目",
        "审批"
      ]
    }
  }
}