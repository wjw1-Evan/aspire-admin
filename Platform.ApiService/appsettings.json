{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
 
  "AllowedOrigins": [
    "http://localhost:15001",
    "http://localhost:15002"
  ],
  "ActivityLog": {
    "Enabled": true,
    "ExcludedPaths": [
      "/health",
      "/api/openapi",
      "/scalar/",
      "/metrics"
    ],
    "IncludeQueryString": true,
    "IncludeAnonymous": false,
    "MaxQueryStringLength": 500
  }
}
