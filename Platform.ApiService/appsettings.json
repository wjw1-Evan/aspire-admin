{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient": "Warning",
      "Polly": "Warning",
      "MongoDB": "Warning",
      "Platform.ApiService": "Information"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:15001",
    "http://localhost:15002"
  ],
  "IoTDataCollection": {
    "Enabled": true,
    "Cron": "0 */5 * * * *",
    "PageSize": 100,
    "MaxDegreeOfParallelism": 4,
    "TimeoutSeconds": 120,
    "HttpFetch": {
      "Enabled": false,
      "Method": "Get",
      "UrlTemplate": "",
      "RequestTimeoutSeconds": 30,
      "RetryCount": 1,
      "RetryDelayMs": 500
    },
    "GatewayStatusCheckEnabled": true,
    "GatewayPingTimeoutSeconds": 5
  },
  "ActivityLog": {
    "Enabled": true,
    "ExcludedPaths": [
      "/health",
      "/api/openapi",
      "/scalar/",
      "/metrics"
    ],
    "IncludeQueryString": true,
    "IncludeAnonymous": false,
    "MaxQueryStringLength": 500
  },
  "Jwt": {
    "ExpirationMinutes": "30",
    "RefreshTokenExpirationDays": "7"
  }
}