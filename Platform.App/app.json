{
  "expo": {
    "name": "Platform.App",
    "slug": "platform-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "platformapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "我们需要访问您的位置信息，以便为您提供附近的人、位置分享等社交功能。",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "我们需要访问您的位置信息，以便为您提供附近的人、位置分享等社交功能。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "我们需要访问您的位置信息，以便为您提供附近的人、位置分享等社交功能。"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
