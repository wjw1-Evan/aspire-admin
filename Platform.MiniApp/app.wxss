@import "styles/iconfont.wxss";
@import "styles/business.wxss";
/**app.wxss**/
:root {
  /* Colors */
  --primary-color: #1890ff;
  --primary-color-hover: #40a9ff;
  --primary-color-active: #096dd9;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
  --text-primary: rgba(0, 0, 0, 0.85);
  --text-secondary: rgba(0, 0, 0, 0.45);
  --text-disabled: rgba(0, 0, 0, 0.25);
  --border-color: #d9d9d9;
  --bg-body: #f7f8fa;
  --header-bg: #001529;
  --white: #ffffff;

  /* Spacing */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;

  /* Border Radius */
  --radius-sm: 4rpx;
  --radius-md: 8rpx;
  --radius-lg: 16rpx;
}

page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
    'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
    'Noto Color Emoji';
  color: rgba(0, 0, 0, 0.85);
  line-height: 1.5715;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 24rpx;
  background-color: #f7f8fa;
}

/* Common Card Style (unified across pages) */
.card, .card-style {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* Buttons */
.btn-primary {
  background: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary:active {
  opacity: 0.8;
  background: #096dd9 !important;
}

/* Common Loading Spinner */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #969799;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Common Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #969799;
}

/* Floating Action Button (unified) */
.fab, .fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.fab:active, .fab-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.fab .iconfont, .fab-btn .iconfont {
  color: #ffffff;
  font-size: 50rpx;
}

/* Text utilities */
.text-secondary {
  color: rgba(0, 0, 0, 0.45);
}

.text-danger {
  color: #ff4d4f;
}

.flex { display: flex; }
.align-center { align-items: center; }
.justify-between { justify-content: space-between; }

/* Unified Search Bar */
.common-search-bar {
  position: sticky;
  top: 0;
  z-index: 99;
  background: #fff;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.common-search-box {
  flex: 1;
  height: 72rpx;
  background: #f5f7fa;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  transition: all 0.3s;
}

.common-search-icon {
  font-size: 32rpx;
  color: #999;
}

.common-search-input {
  flex: 1;
  margin-left: 12rpx;
  height: 100%;
}

.common-search-btn {
  margin-left: 24rpx;
  color: var(--primary-color);
  padding: 10rpx 0;
  font-weight: 500;
}

/* Unified Tab Bar */
.common-tab-bar {
  background: #fff;
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 72rpx; /* Height of search bar if stacked, otherwise 0 */
  z-index: 98;
}

.common-tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.common-tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.common-tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: 3rpx;
}

/* Unified List Container */
.common-list-container {
  padding: 24rpx;
}

/* Unified Card Content Styles */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-body {
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* Info Row Style */
.info-row {
  display: flex;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* Status Tags */
.status-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-tag.success { background: #f6ffed; color: #52c41a; }
.status-tag.processing { background: #e6f7ff; color: #1890ff; }
.status-tag.warning { background: #fff7e6; color: #faad14; }
.status-tag.error { background: #fff1f0; color: #ff4d4f; }
.status-tag.default { background: #f5f5f5; color: #999; }
