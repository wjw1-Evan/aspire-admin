@import "styles/iconfont.wxss";
/**app.wxss**/
:root {
  /* Colors */
  --primary-color: #1890ff;
  --primary-color-hover: #40a9ff;
  --primary-color-active: #096dd9;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
  --text-primary: rgba(0, 0, 0, 0.85);
  --text-secondary: rgba(0, 0, 0, 0.45);
  --text-disabled: rgba(0, 0, 0, 0.25);
  --border-color: #d9d9d9;
  --bg-body: #f7f8fa;
  --header-bg: #001529;
  --white: #ffffff;

  /* Spacing */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;

  /* Border Radius */
  --radius-sm: 4rpx;
  --radius-md: 8rpx;
  --radius-lg: 16rpx;
}

page {
  background-color: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
    'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
    'Noto Color Emoji';
  color: rgba(0, 0, 0, 0.85);
  font-size: 28rpx;
  line-height: 1.5715;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 24rpx;
  background-color: #f7f8fa;
}

/* Common Card Style (unified across pages) */
.card, .card-style {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* Buttons */
.btn-primary {
  background: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary:active {
  opacity: 0.8;
  background: #096dd9 !important;
}

/* Common Loading Spinner */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #969799;
  font-size: 26rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Common Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #969799;
  font-size: 26rpx;
}

/* Floating Action Button (unified) */
.fab, .fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.fab:active, .fab-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.fab .iconfont, .fab-btn .iconfont {
  color: #ffffff;
  font-size: 50rpx;
}

/* Text utilities */
.text-secondary {
  color: rgba(0, 0, 0, 0.45);
}

.text-danger {
  color: #ff4d4f;
}

.flex { display: flex; }
.align-center { align-items: center; }
.justify-between { justify-content: space-between; }
