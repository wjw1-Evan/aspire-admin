.apps-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  padding: 30rpx;
}
.app-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.app-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-bottom: 12rpx;
}
.bg-blue { background: #e6f7ff; }
.bg-orange { background: #fff7e6; }
.bg-green { background: #f6ffed; }
.app-name { font-size: 24rpx; color: #595959; }
