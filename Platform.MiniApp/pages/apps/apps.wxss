.apps-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
  padding: 30rpx;
}
.app-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.app-icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  background: #fff;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.app-card:active .app-icon {
  transform: scale(0.9);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.iconfont {
  font-size: 60rpx;
}

.color-blue .iconfont { color: #1890ff; }
.color-orange .iconfont { color: #fa8c16; }
.color-green .iconfont { color: #52c41a; }
.color-purple .iconfont { color: #722ed1; }
.color-red .iconfont { color: #ff4d4f; }
.color-teal .iconfont { color: #13c2c2; }
.color-pink .iconfont { color: #eb2f96; }

.app-name { 
  font-size: 26rpx; 
  color: #262626;
  font-weight: 500;
}
