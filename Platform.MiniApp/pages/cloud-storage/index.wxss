.container {
  padding: 0;
  background-color: #f7f8fa;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.card-style {
  background: #ffffff;
}

/* Nav Header */
.nav-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  z-index: 10;
}

.breadcrumb {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  overflow-x: auto;
  font-size: 28rpx;
}

.bread-item {
  color: #1890ff;
  white-space: nowrap;
}

.bread-item.active {
  color: #999;
}

.separator {
  margin: 0 12rpx;
  color: #ccc;
}

/* File List */
.file-list-scroll {
  flex: 1;
  height: 0;
}

.file-list {
  background: #fff;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.file-item:active {
  background-color: #f0f0f0;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.file-icon.folder {
  background: #fffbe6;
}

.file-info {
  flex: 1;
  overflow: hidden;
}

.file-name {
  font-size: 30rpx;
  color: #333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.file-meta {
  font-size: 24rpx;
  color: #999;
}

.file-size {
  margin-left: 20rpx;
}

.file-action {
  padding: 20rpx;
}

.action-dots {
  font-size: 40rpx;
  color: #ccc;
  line-height: 1;
}

/* FAB */
.fab-group {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  z-index: 100;
}

.main-fab {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.4);
  transition: all 0.3s;
}

.fab-icon {
  font-size: 60rpx;
  color: #fff;
  line-height: 1;
}

.fab-icon.rotate {
  transform: rotate(45deg);
}

.fab-menu {
  position: absolute;
  bottom: 120rpx;
  right: 0;
  display: none;
  flex-direction: column;
  gap: 20rpx;
  align-items: flex-end;
}

.fab-menu.show {
  display: flex;
}

.fab-item {
  display: flex;
  align-items: center;
}

.fab-item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-left: 20rpx;
}

.fab-item-text {
  font-size: 26rpx;
  color: #1890ff;
  background: #fff;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.bg-blue { background: #1890ff; }
.bg-orange { background: #fa8c16; }
.bg-green { background: #52c41a; }

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-header {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-input {
  background: #f5f5f5;
  height: 80rpx;
  padding: 0 24rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.btn-confirm { background: #1890ff; color: #fff; }

/* Empty */
.empty-state {
  padding-top: 200rpx;
  text-align: center;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}
