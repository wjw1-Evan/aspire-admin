<view class="container">
  <!-- Header Section -->
  <view class="dashboard-header">
    <view class="user-profile">
      <view class="greeting">
        <text class="hi">您好，</text>
        <text class="user-name">{{userInfo.name || '管理员'}}</text>
      </view>
      <text class="sub-greeting">欢迎回到 Aspire 数字化管理平台</text>
    </view>
    <view class="date-badge">{{currentDate}}</view>
  </view>

  <!-- Stats Grid -->
  <view class="stats-grid">
    <view class="stat-card" bindtap="navigateToTask">
      <view class="stat-content">
        <text class="stat-num color-primary">{{todoTasks || 0}}</text>
        <text class="stat-title">待办任务</text>
      </view>
      <view class="stat-icon icon-bg-primary">📋</view>
    </view>
    <view class="stat-card" bindtap="navigateToProject">
      <view class="stat-content">
        <text class="stat-num color-success">{{activeProjects || 0}}</text>
        <text class="stat-title">活跃项目</text>
      </view>
      <view class="stat-icon icon-bg-success">🚀</view>
    </view>
  </view>

  <!-- Rapid Actions -->
  <view class="panel">
    <view class="panel-header">
      <text class="panel-title">常用功能</text>
      <text class="panel-more" bindtap="switchTabToApps">查看全部</text>
    </view>
    <view class="action-grid">
      <view class="action-item" bindtap="navigateToProject">
        <view class="action-box bg-blue">
          <text class="action-char">项</text>
        </view>
        <text class="action-name">项目管理</text>
      </view>
      <view class="action-item" bindtap="navigateToTask">
        <view class="action-box bg-orange">
          <text class="action-char">任</text>
        </view>
        <text class="action-name">任务管理</text>
      </view>
      <view class="action-item" bindtap="navigateToStatistics">
        <view class="action-box bg-purple">
          <text class="action-char">报</text>
        </view>
        <text class="action-name">统计报表</text>
      </view>
      <view class="action-item" bindtap="navigateToProfile">
        <view class="action-box bg-green">
          <text class="action-char">个</text>
        </view>
        <text class="action-name">个人中心</text>
      </view>
    </view>
  </view>

  <!-- Recent Activity -->
  <view class="panel">
    <view class="panel-header">
      <text class="panel-title">最新公告</text>
    </view>
    <view class="msg-list">
      <view class="msg-item">
        <view class="msg-tag tag-blue">公告</view>
        <text class="msg-text">2026年度园区安全生产检查通知</text>
        <text class="msg-time">1小时前</text>
      </view>
      <view class="msg-item">
        <view class="msg-tag tag-orange">预警</view>
        <text class="msg-text">3号楼变压器运行负载异常提示</text>
        <text class="msg-time">3小时前</text>
      </view>
    </view>
  </view>
</view>
