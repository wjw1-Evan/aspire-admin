.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(180deg, #f0f5ff 0%, #f0f2f5 100%);
}

.login-box {
  width: 100%;
  max-width: 670rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 21, 41, 0.08);
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 72rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
}

.title-group {
  text-align: center;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #001529;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.45);
  margin-top: 12rpx;
  display: block;
}

.input-item {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.85);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  height: 96rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  background: #fff;
  border-color: #1890ff;
}

.placeholder {
  color: #bfbfbf;
}

.login-btn {
  width: 100% !important;
  height: 100rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}

.login-btn:active {
  background: #096dd9;
  transform: translateY(2rpx);
}

.extra-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 32rpx;
}

.action-text {
  font-size: 26rpx;
  color: #1890ff;
}

.footer {
  margin-top: 100rpx;
}

.footer-copy {
  font-size: 24rpx;
  color: #bfbfbf;
}

.captcha-box {
  display: flex;
  align-items: center;
}

.captcha-input {
  flex: 1;
}

.captcha-img {
  width: 200rpx;
  height: 96rpx;
  margin-left: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
}
