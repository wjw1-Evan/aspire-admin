.container {
  padding: 0;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f2f3f5;
  padding: 0 24rpx;
  height: 72rpx;
  border-radius: 36rpx;
}

.search-input {
  flex: 1;
  margin-left: 12rpx;
  font-size: 28rpx;
}

.search-btn {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #1890ff;
  padding: 10rpx;
}

.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #ebedf0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #646566;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  right: 30%;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

.asset-list {
  padding: 20rpx;
}

.asset-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.asset-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.asset-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  background-color: #f7f8fa;
  color: #646566;
}

.status-Available { background-color: #f6ffed; color: #52c41a; }
.status-Rented { background-color: #e8f4ff; color: #1890ff; }
.status-Reserved { background-color: #fff7e6; color: #fa8c16; }

.asset-body {
  border-top: 1rpx solid #f2f3f5;
  padding-top: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-row .label {
  color: #969799;
  width: 160rpx;
}

.info-row .value {
  color: #323233;
  flex: 1;
}

.loading-wrap, .empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  color: #969799;
  font-size: 28rpx;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.no-more {
  text-align: center;
  color: #c8c9cc;
  font-size: 24rpx;
  padding: 30rpx 0;
}

.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
}

.add-btn .iconfont {
  color: #fff;
  font-size: 48rpx;
}
