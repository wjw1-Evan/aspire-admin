.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx;
}

.form-container {
  background-color: #fff;
  padding: 20rpx 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-row {
  display: flex;
  justify-content: space-between;
}

.form-item.half {
  width: 46%;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #ee0a24;
  margin-left: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker-box {
  width: 100%;
  height: 80rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #323233;
}

.picker-box .iconfont {
  color: #c8c9cc;
  font-size: 24rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.footer-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn[disabled] {
  background-color: #94caff !important;
  color: rgba(255,255,255,0.6) !important;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255,255,255,0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}