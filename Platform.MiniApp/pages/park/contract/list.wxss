.container {
  padding: 0;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f2f3f5;
  padding: 0 24rpx;
  height: 72rpx;
  border-radius: 36rpx;
}

.search-input {
  flex: 1;
  margin-left: 12rpx;
  font-size: 28rpx;
}

.search-btn {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #1890ff;
  padding: 10rpx;
}

.contract-list {
  padding: 24rpx;
}

.contract-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.contract-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.contract-basic {
  flex: 1;
}

.contract-no {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 8rpx;
}

.tenant-name {
  font-size: 26rpx;
  color: #646566;
}

.contract-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.status-Active { background-color: #e8f4ff; color: #1890ff; }
.status-Expired { background-color: #fff1f0; color: #f5222d; }
.status-Terminated { background-color: #f5f5f5; color: #8a8a8a; }

.contract-body {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f2f3f5;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-row .label {
  color: #969799;
  width: 140rpx;
}

.info-row .value {
  color: #323233;
  flex: 1;
}

.rent {
  color: #f44;
  font-weight: bold;
  font-size: 30rpx;
}

.contract-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.expiry-hint {
  font-size: 22rpx;
  color: #fa8c16;
  background-color: #fff7e6;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.btn-detail {
  font-size: 26rpx;
  color: #1890ff;
  margin-left: auto;
}

.loading-wrap, .empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  color: #969799;
  font-size: 28rpx;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.no-more {
  text-align: center;
  color: #c8c9cc;
  font-size: 24rpx;
  padding: 30rpx 0;
}

.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
}

.add-btn .iconfont {
  color: #fff;
  font-size: 48rpx;
}
