/* 通用样式已迁移至 styles/business.wxss */

.container {
  padding: 0;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* Category Grid (页面特有) */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.category-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.category-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-icon {
  width: 90rpx;
  height: 90rpx;
  background-color: #e6f7ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-icon .iconfont {
  font-size: 48rpx;
  color: #1890ff;
}

.category-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 10rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #969799;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Request Card (页面特有) */
.request-list {
  padding: 20rpx;
}

.request-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.request-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.request-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}

.request-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  background-color: #f2f3f5;
  color: #646566;
}

.request-body {
  border-top: 1rpx solid #f2f3f5;
  padding-top: 20rpx;
}

.request-summary {
  display: block;
  font-size: 28rpx;
  color: #646566;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.request-date {
  font-size: 24rpx;
  color: #969799;
}
