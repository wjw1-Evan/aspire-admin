@import "../../../styles/details.wxss";

.status-tag {
  background: #f0f2f5;
  color: #666;
}

.status-New { background: #e6f7ff; color: #1890ff; }
.status-Following { background: #fff7e6; color: #faad14; }
.status-Qualified { background: #f6ffed; color: #52c41a; }
.status-Dropped { background: #fff1f0; color: #f5222d; }

.highlight-blue {
  color: #1890ff;
  font-weight: 500;
}

.priority-text {
  font-weight: bold;
}

.priority-High { color: #f5222d; }
.priority-Medium { color: #faad14; }
.priority-Low { color: #52c41a; }

.footer-info {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #999;
  font-size: 28rpx;
}
