.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 120rpx;
}

.search-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #001529;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  flex: 1;
  height: 72rpx;
  background-color: #fff;
  border-radius: 36rpx 0 0 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-input {
  flex: 1;
  margin-left: 12rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 0 36rpx 36rpx 0;
}

.tab-bar {
  display: flex;
  background-color: #fff;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #f2f3f5;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #646566;
  padding: 24rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

.filter-bar {
  background-color: #fff;
  padding: 20rpx 0;
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  padding: 0 30rpx;
}

.filter-tab {
  padding: 8rpx 24rpx;
  background-color: #f2f3f5;
  color: #646566;
  font-size: 24rpx;
  border-radius: 24rpx;
  margin-right: 16rpx;
}

.filter-tab.active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.list-container {
  padding: 20rpx;
}

.lead-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.lead-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.company-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  flex: 1;
  margin-right: 20rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-New { color: #1890ff; background-color: #e6f7ff; }
.status-Following { color: #faad14; background-color: #fff7e6; }
.status-Qualified { color: #52c41a; background-color: #f6ffed; }
.status-Lost { color: #969799; background-color: #f5f5f5; }

.lead-body {
  border-top: 1rpx solid #f2f3f5;
  border-bottom: 1rpx solid #f2f3f5;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: #969799;
  width: 140rpx;
}

.info-row .value {
  color: #323233;
  flex: 1;
}

.lead-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date {
  font-size: 24rpx;
  color: #969799;
}

.priority {
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 4rpx;
}

.priority-High { color: #ff4d4f; border: 1rpx solid #ff4d4f; }
.priority-Medium { color: #faad14; border: 1rpx solid #faad14; }
.priority-Low { color: #52c41a; border: 1rpx solid #52c41a; }

.loading-wrap, .no-more, .empty-wrap {
  text-align: center;
  padding: 40rpx 0;
  color: #969799;
  font-size: 26rpx;
}

.loading {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  display: inline-block;
  vertical-align: middle;
  margin-right: 12rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
}

.add-btn .iconfont {
  color: #fff;
  font-size: 48rpx;
}
