.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.stats-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-header .iconfont {
  font-size: 36rpx;
  color: #1890ff;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stats-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #969799;
}

.ai-report-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.ai-header .iconfont {
  font-size: 40rpx;
  color: #722ed1;
  margin-right: 16rpx;
}

.ai-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  flex: 1;
}

.ai-btn {
  margin: 0;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 58rpx;
  font-size: 26rpx;
  background-color: #722ed1;
  color: #fff;
  border-radius: 30rpx;
}

.ai-content {
  background-color: #f9f0ff;
  padding: 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #d3adf7;
}

.report-text {
  font-size: 28rpx;
  color: #531dab;
  line-height: 1.6;
  white-space: pre-wrap;
}

.ai-empty {
  text-align: center;
  padding: 60rpx 0;
  color: #969799;
  font-size: 26rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
