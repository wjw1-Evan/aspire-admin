@import "../../../styles/details.wxss";

.status-Active { background-color: #f6ffed; color: #52c41a; }
.status-Inactive { background-color: #fff1f0; color: #f5222d; }

.highlight-blue {
  color: #1890ff;
  font-weight: 500;
}

.contracts-list {
  padding: 0 10rpx;
}

.contract-wrapper {
  margin-bottom: 24rpx;
}

.contract-card-compact {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.contract-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contract-no {
  font-size: 30rpx;
  font-weight: bold;
  color: #323233;
}

.contract-status-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.contract-status-tag.status-Active { background-color: #e6f7ff; color: #1890ff; }
.contract-status-tag.status-Expired { background-color: #f5f5f5; color: #8c8c8c; }
.contract-status-tag.status-Terminated { background-color: #fff1f0; color: #f5222d; }

.contract-card-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #969799;
}

.rent-text {
  color: #ff4d4f;
  font-weight: bold;
}

.empty-hint {
  text-align: center;
  padding: 60rpx 0;
  color: #ccc;
  font-size: 28rpx;
}

.bottom-placeholder {
  height: 60rpx;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
