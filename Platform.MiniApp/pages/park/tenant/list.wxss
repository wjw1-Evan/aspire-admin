/* 通用样式已迁移至 styles/business.wxss */

.container {
  padding: 0;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* Tenant Card (页面特有) */
.tenant-list {
  padding: 20rpx;
}

.tenant-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tenant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.tenant-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #323233;
}

.tenant-body {
  margin-bottom: 24rpx;
}

.tenant-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f2f3f5;
}

.stats {
  font-size: 24rpx;
  color: #969799;
}
