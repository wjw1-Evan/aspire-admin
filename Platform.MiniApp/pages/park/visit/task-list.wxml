<view class="container">
  <!-- Unified Search Bar -->
  <view class="common-search-bar">
    <view class="common-search-box">
      <text class="iconfont icon-search common-search-icon"></text>
      <input class="common-search-input" placeholder="{{t['common.search']}}" bindinput="onSearchInput" value="{{searchKeyword}}" bindconfirm="handleSearch" confirm-type="search" />
    </view>
    <view class="common-search-btn" bindtap="handleSearch">{{t['common.search']}}</view>
  </view>

  <view class="common-list-container">
    <view wx:for="{{tasks}}" wx:key="id" class="card" bindtap="goToDetail" data-id="{{item.id}}">
      <view class="card-header">
        <text class="card-title">{{item.taskName}}</text>
        <text class="status-tag {{item.status === 'Completed' ? 'success' : (item.status === 'Pending' ? 'warning' : 'default')}}">
          {{item.status === 'Pending' ? t['park.visit.status.pending'] : (item.status === 'Completed' ? t['park.visit.status.completed'] : t['park.visit.status.cancelled'])}}
        </text>
      </view>
      
      <view class="card-body">
        <view class="info-row">
          <text class="info-label">{{t['park.visit.tenant']}}</text>
          <text class="info-value">{{item.tenantName || '-'}}</text>
        </view>
        <view class="info-row">
          <text class="info-label">{{t['park.visit.date']}}</text>
          <text class="info-value">{{item.plannedVisitDate || '-'}}</text>
        </view>
        <view class="info-row">
          <text class="info-label">{{t['park.visit.executor']}}</text>
          <text class="info-value">{{item.visitorName || '-'}}</text>
        </view>
        
        <!-- Priority Tag (Custom to this page, but uses common flex/style principles) -->
        <view class="flex align-center justify-between" style="margin-top: 20rpx; border-top: 1rpx dashed #eee; padding-top: 16rpx;">
          <text class="priority-tag priority-{{item.priority}}">{{item.priority === 'High' ? t['park.visit.priority.high'] : (item.priority === 'Medium' ? t['park.visit.priority.medium'] : t['park.visit.priority.low'])}}</text>
          <text class="text-primary" style="font-size: 26rpx;">{{t['common.detail']}} ></text>
        </view>
      </view>
    </view>

    <!-- Unified Loading/Empty States -->
    <view class="loading-state" wx:if="{{loading}}">
      <view class="loading-icon"></view>
      <text>{{t['common.loading']}}</text>
    </view>
    
    <view class="empty-state" wx:if="{{!loading && tasks.length === 0}}">
      <!-- Use a generic icon or specific one -->
      <text class="iconfont icon-empty" style="font-size: 80rpx; margin-bottom: 20rpx; color: #ccc;"></text>
      <text>{{t['common.empty']}}</text>
    </view>
    
    <view class="text-secondary" style="text-align: center; padding: 30rpx 0; font-size: 24rpx;" wx:if="{{!hasMore && tasks.length > 0}}">
      {{t['common.no_more']}}
    </view>
  </view>
  
  <view class="fab" bindtap="goToAdd">
    <text class="iconfont icon-add"></text>
  </view>
</view>
