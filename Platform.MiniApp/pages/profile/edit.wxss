.container {
  padding: 32rpx;
  background-color: #f7f8fa;
}

.form-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 32rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.btn-area {
  margin-top: 64rpx;
}

.submit-btn {
  background: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 500;
}

.submit-btn:active {
  opacity: 0.8;
}

.submit-btn[disabled] {
  background: #bae7ff !important;
  color: #fff !important;
}
