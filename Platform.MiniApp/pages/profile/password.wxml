<view class="form-container">
  <view class="form-group">
    <view class="form-item">
      <text class="label">{{t['profile.password.current']}}</text>
      <input class="input" password placeholder="{{t['profile.password.current_placeholder']}}" bindinput="onInput" data-field="oldPassword" placeholder-class="placeholder" />
    </view>

    <view class="form-item">
      <text class="label">{{t['profile.password.new']}}</text>
      <input class="input" password placeholder="{{t['profile.password.new_placeholder']}}" bindinput="onInput" data-field="newPassword" placeholder-class="placeholder" />
    </view>

    <view class="form-item">
      <text class="label">{{t['profile.password.confirm']}}</text>
      <input class="input" password placeholder="{{t['profile.password.confirm_placeholder']}}" bindinput="onInput" data-field="confirmPassword" placeholder-class="placeholder" />
    </view>
  </view>

  <view class="btn-area">
    <button class="submit-btn" bindtap="handleSubmit" loading="{{loading}}" disabled="{{loading}}">{{t['profile.password.submit']}}</button>
  </view>

  <view class="tip-area">
    <text class="tip-text">{{t['profile.password.tip']}}</text>
  </view>
</view>
