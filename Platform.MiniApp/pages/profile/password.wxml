<view class="container">
  <view class="form-container">
    <view class="form-item">
      <text class="label">当前密码</text>
      <input class="input" password placeholder="请输入当前密码" bindinput="onInput" data-field="oldPassword" />
    </view>

    <view class="form-item">
      <text class="label">新密码</text>
      <input class="input" password placeholder="请输入新密码" bindinput="onInput" data-field="newPassword" />
    </view>

    <view class="form-item">
      <text class="label">确认新密码</text>
      <input class="input" password placeholder="再次输入新密码" bindinput="onInput" data-field="confirmPassword" />
    </view>
  </view>

  <view class="btn-area">
    <button class="submit-btn" bindtap="handleSubmit" loading="{{loading}}" disabled="{{loading}}">确认修改</button>
  </view>

  <view class="tip-area">
    <text class="tip-text">密码需包含字母、数字，长度不少于 6 位</text>
  </view>
</view>
