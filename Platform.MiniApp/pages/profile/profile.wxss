.container {
  padding: 32rpx;
  background-color: #f0f2f5;
  min-height: 100vh;
}

/* Header Card */
.profile-card {
  background: #001529;
  border-radius: 20rpx;
  padding: 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 21, 41, 0.15);
  position: relative;
  overflow: hidden;
}

.profile-card::after {
  content: '';
  position: absolute;
  right: -50rpx;
  top: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 50%;
}

.user-block {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 32rpx;
}

.info .nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 12rpx;
}

.tag-group {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.role-tag {
  font-size: 20rpx;
  background: #1890ff;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-tag {
  font-size: 20rpx;
  background: rgba(82, 196, 26, 0.2);
  color: #52c41a;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

/* Menu Groups */
.card-style {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-left .icon {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.item-left .label {
  font-size: 28rpx;
  color: #262626;
}

.arrow {
  font-size: 24rpx;
  color: #bfbfbf;
}

/* Logout */
.logout-section {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logout-btn {
  width: 100% !important;
  height: 96rpx;
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 32rpx;
}

.logout-btn:active {
  background: rgba(255, 77, 79, 0.05);
}

.version-text {
  font-size: 22rpx;
  color: #bfbfbf;
}
