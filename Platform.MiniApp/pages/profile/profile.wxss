.container {
  padding: 32rpx;
  background-color: #f0f2f5;
  min-height: 100vh;
}

/* Header Card */
/* Header Card */
.profile-card {
  background: linear-gradient(135deg, #001529 0%, #003a70 100%);
  border-radius: 24rpx;
  padding: 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 21, 58, 0.2);
  position: relative;
  overflow: hidden;
}

.profile-card::after {
  content: '';
  position: absolute;
  right: -60rpx;
  top: -60rpx;
  width: 240rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  filter: blur(20rpx);
}

/* User Block */
.user-block {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  margin-right: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.info .nickname {
  font-size: 42rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

/* Company Info */
.company-info {
  background: rgba(255, 255, 255, 0.12);
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.company-info:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.99);
}

.company-header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.company-name {
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.company-badges {
  display: flex;
  gap: 12rpx;
}

.badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
  line-height: 1.2;
}

.current-badge {
  background: rgba(24, 144, 255, 0.25);
  color: #bae7ff;
  border: 1rpx solid rgba(24, 144, 255, 0.3);
}

.admin-badge {
  background: rgba(250, 140, 22, 0.25);
  color: #ffe58f;
  border: 1rpx solid rgba(250, 140, 22, 0.3);
}

/* Tags */
.tag-group {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.role-tag {
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.15);
  color: #fff;
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.status-tag {
  font-size: 22rpx;
  background: rgba(82, 196, 26, 0.2);
  color: #b7eb8f;
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}

/* Menu Groups */
.card-style {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.03);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  border-bottom: 1rpx solid #f9f9f9;
  transition: background 0.2s;
}

.menu-item:active {
  background: #fbfbfb;
}

.menu-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-left .icon {
  font-size: 40rpx;
  margin-right: 28rpx;
  /* Default color */
  color: #8c8c8c;
}

.item-left .icon-profile { color: #1890ff; }
.item-left .icon-password { color: #52c41a; }
.item-left .icon-info { color: #faad14; }
.item-left .icon-settings { color: #722ed1; }

.item-left .label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.arrow {
  font-size: 24rpx;
  color: #d9d9d9;
}

/* Logout */
.logout-section {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60rpx;
}

.logout-btn {
  width: 100% !important;
  height: 96rpx;
  background: #fff;
  color: #ff4d4f;
  border: none;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.version-text {
  font-size: 24rpx;
  color: #bfbfbf;
}
