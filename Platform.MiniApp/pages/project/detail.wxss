.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.card-style {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  margin: 32rpx 0 16rpx 8rpx;
}

/* Header Section */
.detail-header .title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.project-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 6rpx;
}

.status-1 { background: #e6f7ff; color: #1890ff; }
.status-3 { background: #f6ffed; color: #52c41a; }
.status-0 { background: #fff7e6; color: #faad14; }

.progress-label {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.progress-label .percent {
  font-weight: bold;
  color: #1890ff;
}

.header-actions {
  margin-top: 32rpx;
  display: flex;
  gap: 20rpx;
}

.btn-tasks, .btn-create-task {
  flex: 1;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 16rpx 0;
  line-height: 1.5;
}

.btn-tasks {
  background: #1890ff;
  color: #fff;
}

.btn-create-task {
  background: #fff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}

.btn-tasks:active, .btn-create-task:active {
  opacity: 0.8;
}

/* Info Items */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
}

.priority-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.priority-2 { background: #fff1f0; color: #ff4d4f; }
.priority-1 { background: #e6f7ff; color: #1890ff; }
.priority-0 { background: #f5f5f5; color: #8c8c8c; }

/* Description */
.desc-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* Members */
.member-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  background: #f0f2f5;
}

.member-info {
  display: flex;
  flex-direction: column;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.member-role {
  font-size: 22rpx;
  color: #999;
}

.empty-members {
  text-align: center;
  padding: 40rpx 0;
  color: #ccc;
  font-size: 26rpx;
}

.bottom-placeholder {
  height: 60rpx;
}

/* Loading */
.loading-state {
  display: flex;
  flex-direction: column;
  items-center;
  justify-content: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}
