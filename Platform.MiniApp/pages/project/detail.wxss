@import "../../styles/details.wxss";

.header-card .status-row {
  margin-bottom: 24rpx;
}

.progress-section {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.progress-info .percent {
  font-weight: bold;
  color: #1890ff;
}

.action-bar {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.action-bar button {
  flex: 1;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
}

.priority-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.priority-2 { background: #fff1f0; color: #ff4d4f; }
.priority-1 { background: #e6f7ff; color: #1890ff; }
.priority-0 { background: #f5f5f5; color: #8c8c8c; }

.status-1 { background: #e6f7ff; color: #1890ff; }
.status-3 { background: #f6ffed; color: #52c41a; }
.status-0 { background: #fff7e6; color: #faad14; }

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f2f3f5;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  background: #f0f2f5;
}

.member-info {
  display: flex;
  flex-direction: column;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.member-role {
  font-size: 22rpx;
  color: #999;
}

.empty-members {
  text-align: center;
  padding: 40rpx 0;
  color: #ccc;
  font-size: 26rpx;
}

.bottom-placeholder {
  height: 60rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}
