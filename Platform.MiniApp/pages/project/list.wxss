.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.card-style {
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  padding: 30rpx;
}

/* Statistics Board */
.stats-board {
  padding: 40rpx 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-value.primary { color: #1890ff; }
.stat-value.success { color: #52c41a; }
.stat-value.warning { color: #faad14; }
.stat-value.danger { color: #ff4d4f; }

/* Search Bar */
.search-section {
  padding: 20rpx;
}

.search-box {
  background: #f0f2f5;
  border-radius: 32rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-icon {
  color: #999;
  font-size: 32rpx;
}

.search-input {
  flex: 1;
  margin-left: 12rpx;
  font-size: 26rpx;
}

/* Project Cards */
.project-card {
  transition: active 0.2s;
}

.project-card:active {
  background-color: #fafafa;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.project-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  background: #f5f5f5;
  color: #666;
}

.status-1 { background: #e6f7ff; color: #1890ff; } /* InProgress */
.status-3 { background: #f6ffed; color: #52c41a; } /* Completed */
.status-0 { background: #fff7e6; color: #faad14; } /* Planning */

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-row .label {
  color: #999;
  width: 140rpx;
}

.info-row .value {
  color: #444;
}

.progress-section {
  margin-top: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.progress-info .label {
  color: #666;
}

.progress-info .percent {
  font-weight: bold;
  color: #1890ff;
}

/* Utils */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.2;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.loading-more, .no-more {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 30rpx 0;
}

/* Floating Action Button */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.fab-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.fab-btn .iconfont {
  color: #ffffff;
  font-size: 50rpx;
}
