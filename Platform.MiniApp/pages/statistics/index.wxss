/* 通用样式已迁移至 styles/business.wxss */

.container {
  min-height: 100vh;
}

/* Period Selector (页面特有) */
.period-selector {
  display: flex;
  padding: 10rpx;
  background: #f0f2f5;
  border-radius: 40rpx;
  margin-bottom: 40rpx;
}

.period-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding: 12rpx 0;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.period-item.active {
  background: #ffffff;
  color: #1890ff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* Stat Card (页面特有) */
.stat-card {
  flex: 1;
  padding: 24rpx;
  margin-bottom: 0;
}

.stat-card .card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon-box {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  margin-right: 12rpx;
}

.icon-box.blue { background: #1890ff; }
.icon-box.green { background: #52c41a; }

.stat-card .title {
  font-size: 24rpx;
  color: #999;
}

.stat-card .value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.progress-box .progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* Section Card (页面特有) */
.section-header {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #1890ff;
  padding-left: 20rpx;
}

.status-rows .status-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.status-rows .status-row:last-child {
  border-bottom: none;
}

.status-row .label { font-size: 28rpx; color: #666; }
.status-row .num { font-size: 28rpx; font-weight: bold; }

.split-stats {
  display: flex;
}

.split-item {
  flex: 1;
  text-align: center;
}

.split-item:first-child {
  border-right: 1rpx solid #f0f0f0;
}

.split-item .label { font-size: 24rpx; color: #999; display: block; margin-bottom: 10rpx; }
.split-item .num { font-size: 36rpx; font-weight: bold; color: #333; }
.sub-tags { margin-top: 10rpx; }
.sub-tags text { font-size: 20rpx; padding: 2rpx 12rpx; border-radius: 4rpx; }
.tag-success { background: #f6ffed; color: #52c41a; }
.tag-blue { background: #e6f7ff; color: #1890ff; }

/* AI Action (页面特有) */
.ai-button-wrap {
  margin-top: 40rpx;
}

.ai-btn {
  background: linear-gradient(45deg, #1890ff, #722ed1);
  color: #fff;
  border-radius: 44rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(114, 46, 209, 0.3);
}

.ai-btn[loading] {
  opacity: 0.8;
}

.sparkle { margin-right: 8rpx; }
