/* Inherit styles from project context but optimized for task */
.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.card-style {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 26rpx;
  color: #999;
  margin: 32rpx 0 16rpx 8rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.vertical {
  flex-direction: column;
  align-items: flex-start;
}

.form-item .label {
  font-size: 28rpx;
  color: #333;
  width: 160rpx;
}

.form-item.vertical .label {
  margin-bottom: 20rpx;
}

.form-item input, .form-item picker {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}

.form-item textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.placeholder {
  color: #ccc;
}

.picker-value {
  color: #333;
}

.btn-area {
  margin: 60rpx 0;
}

.btn-area button {
  border-radius: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}
