@import "../../styles/details.wxss";

.header-card .status-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.task-id {
  font-size: 24rpx;
  color: #999;
}

.progress-section {
  margin-top: 32rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.progress-info .percent {
  font-weight: bold;
  color: #1890ff;
}

.priority-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.priority-3 { background: #fff1f0; color: #ff4d4f; }
.priority-2 { background: #fff7e6; color: #faad14; }
.priority-1 { background: #e6f7ff; color: #1890ff; }

.status-tag.status-0 { background: #f5f5f5; color: #8c8c8c; }
.status-tag.status-2 { background: #e6f7ff; color: #1890ff; }
.status-tag.status-3 { background: #f6ffed; color: #52c41a; }
.status-tag.status-4 { background: #fff7e6; color: #faad14; }

.bottom-padding { height: 60rpx; }

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}