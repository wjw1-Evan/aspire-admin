.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.card-style {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
  margin: 32rpx 0 16rpx 8rpx;
}

/* Header */
.detail-header {
  color: #fff;
}

.bg-status-0 { background: linear-gradient(135deg, #bfbfbf, #8c8c8c); }
.bg-status-2 { background: linear-gradient(135deg, #40a9ff, #096dd9); }
.bg-status-3 { background: linear-gradient(135deg, #73d13d, #389e0d); }
.bg-status-4 { background: linear-gradient(135deg, #ffc53d, #d48806); }

.status-top {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
}

.task-main-title {
  font-size: 40rpx;
  font-weight: bold;
  word-break: break-all;
}

/* Progress */
.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.percent {
  font-weight: bold;
  color: #1890ff;
  font-size: 32rpx;
}

/* Info Items */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child { border-bottom: none; }

.info-item .label { font-size: 28rpx; color: #666; }
.info-item .value { font-size: 28rpx; color: #333; }

.priority-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.priority-3 { background: #fff1f0; color: #ff4d4f; }
.priority-2 { background: #fff7e6; color: #faad14; }
.priority-1 { background: #e6f7ff; color: #1890ff; }

/* Description */
.desc-content {
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
}

.bottom-padding { height: 60rpx; }

/* Loading */
.loading-full {
  display: flex;
  flex-direction: column;
  items-center;
  justify-content: center;
  height: 100vh;
  color: #999;
}